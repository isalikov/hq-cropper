root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 180
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*rc]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
